;; UI Options

(setq inhibit-startup-message t) ; Disable startup message
(scroll-bar-mode -1) ; Disable scrollbar
(tool-bar-mode -1) ; Disable toolbar
(menu-bar-mode -1) ; Disable menu bar
(setq visible-bell nil) ; Disable visual bell
(global-display-line-numbers-mode) ; Display line numbers
(column-number-mode) ; Display column numbers
(setq-default tab-width 2) ; Set tab to 2
(setq frame-resize-pixelwise t) ; Allow Emacs' window to be any size and not snap to characters
(fringe-mode '(16 . 24)) ; Lateral spaces

